<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumnedam.morir.MainActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNombre"
        android:inputType="text"
        android:layout_below="@+id/twNombre"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/twNombre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:id="@+id/twEdad"
        android:layout_below="@+id/etNombre"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdad"
        android:layout_below="@+id/twEdad"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twSexo"
        android:layout_below="@+id/etEdad"
        android:layout_alignRight="@+id/twEdad"
        android:layout_alignEnd="@+id/twEdad" />

    <TextView
        android:text="Fumas?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twFumar"
        android:layout_below="@+id/rgSexo"
        android:layout_alignRight="@+id/twNombre"
        android:layout_alignEnd="@+id/twNombre" />

    <TextView
        android:text="Bebes?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkFumar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/twBeber" />

    <CheckBox
        android:text="Si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkFumar"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/twFumar"
        android:layout_alignLeft="@+id/twFumar"
        android:layout_alignStart="@+id/twFumar" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/twNombre"
        android:layout_alignEnd="@+id/twNombre">

    </LinearLayout>

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:id="@+id/rgSexo"
        android:layout_below="@+id/twSexo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="28dp">

        <RadioButton
            android:text="Hombre"
            android:layout_width="94dp"
            android:layout_height="21dp"
            android:id="@+id/rbHombre" />

        <RadioButton
            android:text="Mujer"
            android:layout_width="87dp"
            android:layout_height="17dp"
            android:id="@+id/rbMujer"
            android:layout_gravity="end" />

    </RadioGroup>

    <CheckBox
        android:text="Si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkBeber"
        android:layout_below="@+id/twBeber"
        android:layout_alignRight="@+id/twBeber"
        android:layout_alignEnd="@+id/twBeber"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Cuando voy a morir?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BCalcular"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etEdad"
        android:layout_alignStart="@+id/etEdad" />


</RelativeLayout>
